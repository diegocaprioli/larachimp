{
    "name": "diegocaprioli/larachimp",
    "description": "A simple Mailchimp API client for the Laravel framework.",
    "keywords": ["mailchimp", "api", "php", "v3", "laravel"],
    "authors": [
        {
            "name": "Diego Caprioli",
            "email": "diegocaprioli@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.6",
        "guzzlehttp/guzzle": "~6.0",
        "laravel/framework": "~5.1",
        "vlucas/phpdotenv": "~1.0"        
    },
    "require-dev": {
        "phpunit/phpunit": "~5.5",
        "phpunit/php-code-coverage": "4.0.8",
        "orchestra/testbench": "~3.0"
    },
    "config": {
        "platform": {
            "php": "5.6"
        },
        "sort-packages": true
    },
    "autoload": {        
        "psr-4": {
            "DiegoCaprioli\\Larachimp\\": "src/",
            "DiegoCaprioli\\Larachimp\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
